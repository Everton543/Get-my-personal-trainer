<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getmypersonaltrainer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ReadInvitationMessageActivity" />

        <activity android:name=".ClientExerciseListActivity"
            android:parentActivityName=".PersonalTrainerMainActivity"/>

        <activity android:name=".EvaluatePersonalTrainerActivity"
            android:parentActivityName=".ClientMainActivity"/>

        <activity android:name=".SendInvitationActivity"
            android:parentActivityName=".PersonalTrainerMainActivity"/>

        <activity android:name=".CreatePublicExerciseActivity"
            android:parentActivityName=".PersonalTrainerMainActivity"/>

        <activity android:name=".LoadingActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".PersonalTrainerSingUpActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ChooseSignUpType" />

        <activity android:name=".AllPersonalTrainerListResultActivity"
            android:parentActivityName=".ClientMainActivity"/>

        <activity android:name=".PersonalTrainerMainActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ClientMainActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".PersonalTrainerInfoActivity"
            android:parentActivityName=".ClientMainActivity"/>

        <activity android:name=".ClientSignUpActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ChangeClientInfoActivity"
            android:parentActivityName=".ClientMainActivity"/>

        <activity android:name=".ExerciseInfoActivity"
            android:parentActivityName=".ClientMainActivity"/>

        <activity android:name=".ClientInfoActivity"
            android:parentActivityName=".PersonalTrainerMainActivity"/>

        <activity android:name=".CreateExerciseActivity"
            android:parentActivityName=".PersonalTrainerMainActivity"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>